<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
  </tr>

<div id="user_nav">
  <% if @current_user %>
    Hi, <strong><%= @current_user.name %></strong>  <br />
  <% end %>
</div>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.heading %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
